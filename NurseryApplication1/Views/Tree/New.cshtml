@model IEnumerable<NurseryApplication1.Models.CategoryDto>
@{
    ViewBag.Title = "Create";
}

<h2>New</h2>

<a class="navlink" style="border: 1px solid black; padding: 10px; color: green; "  ; href="/Tree/List">Go Back To List </a>

<form action="/Tree/Create" method="POST" style="margin-top:30px;">
    <div>
        <label>Name:</label> <input type="text" name="TreeName" />
    </div>
    <div>
        <label>Height (Inches):</label> <input type="number" name="TreeHeight" />
    </div>
    <div>
        <label>Category:</label>
        <select name="CategoryId">
            @foreach (var category in Model)
            {
                <option value="@category.CategoryId">   @category.CategoryName </option>

            }
        </select>
    </div>

    <div>
        <input type="submit" value="Add Tree" />

    </div>
</form>